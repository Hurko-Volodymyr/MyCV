@page
@model ResumePageModel
@{
    ViewData["Title"] = "Моє резюме";
}

<h1>@Model.Resume.FullName</h1>
<p>Телефон: @Model.Resume.Contact</p>

<h2>Про мене</h2>
<p>@Model.Resume.Summary</p>

<h2>Навички</h2>
<ul>
    @foreach (var skill in Model.Resume.Skills)
    {
        <li>@skill</li>
    }
</ul>

<h2>Досвід роботи</h2>
@foreach (var experience in Model.Resume.WorkExperiences)
{
    <div>
        <h3>@experience.Position</h3>
        <p>@experience.Company</p>
        <p>@experience.StartDate.ToString("MMM yyyy") - @(experience.EndDate?.ToString("MMM yyyy") ?? "Теперішній час")</p>
        <p>@experience.Description</p>
    </div>
}
<h2>Освіта</h2>
@foreach (var education in Model.Resume.Education)
{
    <div>
        <h3>@education.Name</h3>
        <p>@education.Degree</p>
        <p>@education.StartDate.ToString("MMM yyyy") - @(education.EndDate?.ToString("MMM yyyy") ?? "Теперішній час")</p>
        <p>@education.Description</p>
    </div>
}